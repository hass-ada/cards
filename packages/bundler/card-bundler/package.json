{
  "name": "@hass-ada/card-bundler",
  "type": "module",
  "version": "0.1.0",
  "description": "Bundler tool for home assistant lovelace cards.",
  "author": "Ada",
  "license": "MIT",
  "repository": "https://github.com/hass-ada/cards",
  "keywords": [
    "home-assistant",
    "lovelace",
    "card"
  ],
  "exports": {
    ".": {
      "types": "./dist/card-bundler.d.ts",
      "import": "./dist/card-bundler.js"
    },
    "./dist/*": "./dist/*"
  },
  "main": "dist/card-bundler.js",
  "types": "dist/card-bundler.d.ts",
  "bin": {
    "card-bundler": "dist/bin/card-bundler.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "wireit"
  },
  "wireit": {
    "build": {
      "command": "rollup --config rollup.config.ts --configPlugin 'swc3' --watch.onEnd 'echo \"rollup.watch.onEnd\"'",
      "files": ["src/**/*.ts", "tsconfig.json", "rollup.config.ts"],
      "output": ["dist/**"],
      "clean": "if-file-deleted",
      "dependencies": ["../bundler-helpers:build"]
    }
  },
  "dependencies": {
    "@hass-ada/bundler-helpers": "workspace:^",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@swc/core": "^1.3.0",
    "@swc/helpers": "^0.5.1",
    "read-pkg-up": "^10.0.0",
    "rollup": "^3.0.0",
    "rollup-plugin-swc3": "^0.9.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@swc/core": "^1.3.70",
    "@types/node": "^20.4.2",
    "@types/yargs": "^17.0.24",
    "@types/yargs-parser": "^21.0.0",
    "colorette": "^2.0.20",
    "date-time": "^4.0.0",
    "fast-glob": "^3.3.0",
    "magic-string": "^0.30.1",
    "pretty-ms": "^8.0.0",
    "read-pkg-up": "^10.0.0",
    "rollup": "^3.26.3",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-swc3": "^0.9.1",
    "signal-exit": "^4.0.2",
    "yargs": "^17.7.2",
    "yargs-parser": "^21.1.1"
  }
}
