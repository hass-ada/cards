{
  "name": "@hass-ada/swipe-card",
  "type": "module",
  "version": "0.1.0",
  "description": "A card thats lets you swipe through multiple Lovelace cards.",
  "author": "Ada",
  "license": "MIT",
  "keywords": [
    "swipe",
    "swiper",
    "home-assistant",
    "lovelace",
    "card"
  ],
  "main": "src/index.ts",
  "scripts": {
    "build": "wireit",
    "dev": "wireit"
  },
  "wireit": {
    "build": {
      "command": "card-bundler build -i src/index.ts --hacs",
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "dist/**"
      ],
      "dependencies": [
        "../../..:build:infra"
      ]
    },
    "dev": {
      "command": "card-bundler build -i src/index.ts --hacs -w",
      "dependencies": [
        "../../..:build:infra"
      ],
      "service": true
    }
  },
  "dependencies": {
    "@hass-ada/bundler-helpers": "workspace:^",
    "@hass-ada/card": "workspace:^",
    "@lit-labs/scoped-registry-mixin": "^1.0.1",
    "@swc/helpers": "^0.5.1",
    "custom-card-helpers": "^1.9.0",
    "home-assistant-js-websocket": "^8.2.0",
    "lit": "^2.7.6",
    "swiper": "^10.0.4"
  },
  "devDependencies": {
    "@hass-ada/card-bundler": "workspace:^",
    "@hass-ada/tsconfig": "workspace:^"
  },
  "publishConfig": {
    "directory": "dist"
  }
}
