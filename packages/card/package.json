{
  "name": "@hass-ada/card",
  "type": "module",
  "version": "0.1.2",
  "description": "Card helpers for making home assistant lovelace cards.",
  "author": "Ada",
  "license": "MIT",
  "repository": "https://github.com/hass-ada/cards",
  "keywords": [
    "home-assistant",
    "lovelace",
    "card"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./decorators": {
      "types": "./dist/decorators.d.ts",
      "import": "./dist/decorators.js"
    },
    "./dist/*": "./dist/*"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "wireit"
  },
  "wireit": {
    "build": {
      "command": "rollup --config rollup.config.ts --configPlugin 'swc3'",
      "files": [
        "src/**/*.ts",
        "tsconfig.json",
        "rollup.config.ts"
      ],
      "output": [
        "dist/**"
      ]
    }
  },
  "devDependencies": {
    "@hass-ada/tsconfig": "workspace:^",
    "@swc/core": "^1.3.70",
    "rollup": "^3.26.3",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-swc3": "^0.9.0"
  }
}
